class Solution {
    public int nearestValidPoint(int x, int y, int[][] points) {
        int min=9999999;
        int index=0;
        int j=0;
        boolean valid=false;
        for(int i=0;i<points.length;i++){
                if(x==points[i][j] || y==points[i][j+1]){
                    int dis=Math.abs(x-points[i][j])+Math.abs(y-points[i][j+1]);
                    if(dis<min){
                        min=dis;
                        index=i;
                        valid=true;
                    }
            }
        }
        if(valid){
        return index;
        }
        return -1;
    }
}
