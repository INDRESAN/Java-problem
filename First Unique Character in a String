class Solution {
    public int firstUniqChar(String s) {
        int n = s.length();
        
        for (int i = 0; i < n; i++) {
            int j = 0;
            while (j < n) {
                if (i != j && s.charAt(i) == s.charAt(j)) {
                    break; 
                }
                j++;
            }
            if (j == n) { 
                return i;
            }
        }
        return -1;
    }
}
